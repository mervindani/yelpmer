<% layout('layout/boilerplate') %>
    <div class="container justify-content-center align-items-center">
        <div class="row">
            <div class="col-md-6 offset-md-3 col-xl-4 offset-xl-4">
                <div class="card shadow">
                    <div class="card-body">
                        <img src="https://images.unsplash.com/photo-1549124151-844d2a02fe9a?ixid=MnwxMjA3fDB8MHxzZWFyY2h8MjV8fGdhdGV8ZW58MHx8MHx8&ixlib=rb-1.2.1&auto=format&fit=crop&w=500&q=60"
                        class="card-img-top img-fluid h-50">  
                        <h5 class="card-title">Login</h5>
                        <form action="/login" method="POST" novalidate class="needs-validation">
                                <div class="mb-2">
                                    <label class="form-label" for="username">username</label>
                                    <input class="form-control" type="text" id="username" autofocus name="username" required>
                                    <div class="valid-feedback">Looks good</div>
                                    <div class="invalid-feedback">
                                        invalid input..
                                    </div>
                                </div>
                                <div class="mb-2">
                                    <label class="form-label" for="password">password</label>
                                    <input class="form-control" type="password" id="password" name="password" required>
                                    <div class="valid-feedback">Looks good</div>
                                    <div class="invalid-feedback">
                                        invalid input..
                                    </div>
                                </div>
                                <div class="d-grid mt-4"><button class="btn btn-success">Login</button></div>
                                
                            </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
   